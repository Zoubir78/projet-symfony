
{% extends "base.html.twig" %}

{% block body %}

    <nav class="navbar has-background-grey-darker is-dark">
        <div class="navbar-brand">
            <a class="navbar-item" href="{{ path('homepage') }}">
                <p class="subtitle is-4 has-text-primary">
                    <i class="fa fa-calendar-check-o" style="font-size:36px;color:yellow"></i> <b>MY-EVENT</b>
                </p>
            </a>

            <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <section class="hero info">
            <nav class="navbar">
                <div id="navbarMenu" class="navbar-menu">
                    <div class="navbar-end">
                        <span class="navbar-item">
                            <a class="button is-white is-outlined" href="{{ path('event_list') }}">
                                <span class="icon">
                                    <i class="fas fa-clipboard-list"></i>
                                </span>
                                <span>Mes événements</span>
                            </a>
                        </span>
                        <span class="navbar-item">
                            <a class="button is-white is-outlined" href="{{ path('new_event') }}">
                                <span class="icon">
                                    <i class="fas fa-calendar-plus"></i>
                                </span>
                                <span>Nouvel événement</span>
                            </a>
                        </span>
                        <span class="navbar-item">
                            <a class="button is-white is-outlined" href="{{ path('participate') }}">
                                <span class="icon">
                                    <i class="fas fa-newspaper"></i>
                                </span>
                                <span>Participations</span>
                            </a>
                        </span>                               
                    </div>
                </div>
            </nav>
        </section>

        <div class="navbar-end">
            <div class="navbar-item">
                <div class="buttons">
                    {% if app.user %}
                        <a class="button is-primary is-small" href="{{ path('profile_edit') }}">
                            <span class="icon"><i class="fas fa-user-circle"></i></span>
                            <strong>{{ app.user.email }}</strong>
                        </a>
                        <a class="button is-light is-small" href="{{ path('app_logout') }}">
                            <span class="icon">
                                <i class="fas fa-sign-out"></i>
                            </span>
                        </a>
                    {% else %}
                        <a class="button is-primary is-small" href="{{ path('app_register') }}">
                            <strong>Inscription</strong>
                        </a>
                        <a class="button is-light is-small" href="{{ path('app_login') }}">
                            Connexion
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </nav>

    {% block content %}{% endblock %}
{% endblock %}



    

   
   

