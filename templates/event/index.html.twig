{% extends "_template.html.twig" %}

{% block title %}Evenements{% endblock %}

{% block content %}
    <div class="section">

        <h1 class="title">Evénements: {{ liste_evenements|length }} </h1>

        {# Inclusion du fichier des messages flash #}
        {% include 'includes/flash.html.twig' %}

        <a href="{{ path('event_ajout') }}" class="button is-info">Nouvel événement:</a>

        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Lieu</th>
                <th>Date</th>
                <th>Modifier / Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for event in liste_evenements %}    
                <tr class="is-selected">
                    <th>{{ event.id }}</th>
                    <td>
                        <a href="#">
                        {{ event.name }}
                        </a>
                    </td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.place }}</td>
                    <td>{{ event.createdAt | date('d-m-Y')}}</td>
                    <td>
                        <a href="{{ path('event_modif', {id: event.id}) }}" class="button is-success">Modifier</a>
                        <a href="{{ path('event_supprimer', {id: event.id}) }}" class="button is-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table> 
    </div>

{% endblock %}
